source :rubygems

gem 'rails', '3.2.6'

gem 'pg'

gem 'devise', '~> 2.0'
gem 'responders'
gem 'simple_form', '~> 2.0'
gem 'carrierwave'
gem 'rmagick'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

gem 'rspec-rails', group: [:test, :development]

group :development do
  gem 'pry-rails'
  gem 'mailcatcher'
end

group :test do
  gem 'capybara', '~> 1.0'
  gem 'factory_girl_rails', '~> 3.0'
  gem 'database_cleaner'
end
